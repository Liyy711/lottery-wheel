<body>
    <div class="wheel-container">
        <div class="pointer"></div>
        <div class="wheel" id="wheel">
            <div class="text-not-buy">不买 (80%)</div>
            <div class="text-buy">买 (20%)</div>
        </div>
    </div>
    <button id="draw-btn">开始抽奖</button>
    <div id="result"></div>

    <script>
        const wheel = document.getElementById('wheel');
        const drawBtn = document.getElementById('draw-btn');
        const result = document.getElementById('result');

        let totalRotateAngle = 0;
        let isSpinning = false;

        drawBtn.addEventListener('click', draw);

        function draw() {
            if (isSpinning) return;
            result.textContent = '';
            drawBtn.disabled = true;
            isSpinning = true;

            // 固定结果为“不买”
            const res = '不买';

            // 固定最终停止角度在红色区块（0-288°）
            const finalAngle = Math.random() * 288;

            // 转动圈数：5-10圈随机
            const baseRotate = (5 + Math.random() * 5) * 360;
            const targetAngle = totalRotateAngle + baseRotate + finalAngle;

            // 执行旋转
            wheel.style.transform = `rotate(${targetAngle}deg)`;

            // 动画结束后更新状态
            setTimeout(() => {
                result.textContent = `结果：${res}`;
                result.style.color = '#F44336';
                totalRotateAngle = targetAngle;
                isSpinning = false;
                drawBtn.disabled = false;
            }, 4000);
        }
    </script>
</body>
</html>
