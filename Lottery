    <style>
        body {
            display: flex;
            flex-direction: column;
            align-items: center;
            background-color: #f5f5f5;
            font-family: Arial, sans-serif;
        }
        .wheel-container {
            position: relative;
            width: 300px;
            height: 300px;
            margin: 20px 0;
        }
        .wheel {
            width: 100%;
            height: 100%;
            border-radius: 50%;
            background: conic-gradient(
                #F44336 0% 80%,  /* 红色：不买 */
                #4CAF50 80% 100%  /* 绿色：买 */
            );
            position: relative;
            transition: transform 4s cubic-bezier(0.19, 1, 0.22, 1);
            box-shadow: 0 0 20px rgba(0,0,0,0.2);
        }
        .wheel::after {
            content: '';
            position: absolute;
            top: 50%;
            left: 50%;
            width: 20px;
            height: 20px;
            background: #fff;
            border-radius: 50%;
            transform: translate(-50%, -50%);
            box-shadow: 0 0 5px rgba(0,0,0,0.3);
        }
        .text-not-buy {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%) rotate(-144deg) translate(0, -100px);
            color: white;
            font-size: 20px;
            font-weight: bold;
            text-shadow: 0 0 3px #000;
            width: 100px;
            text-align: center;
        }
        .text-buy {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%) rotate(324deg) translate(0, -100px);
            color: white;
            font-size: 20px;
